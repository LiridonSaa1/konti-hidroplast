<IfModule mod_rewrite.c>
  RewriteEngine On
  RewriteBase /

  # Handle API requests - redirect to Node.js server
  RewriteCond %{REQUEST_URI} ^/api/
  RewriteRule ^api/(.*)$ http://localhost:5000/api/$1 [R,L]

  # Don't rewrite files or directories that exist
  RewriteCond %{REQUEST_FILENAME} -f [OR]
  RewriteCond %{REQUEST_FILENAME} -d
  RewriteRule ^ - [L]

  # Rewrite everything else to index.html (SPA fallback)
  RewriteRule ^ index.html [L]
</IfModule>